@{
    ViewData["Title"] = "Forgot Password";
}

@section Scripts{
    <script src="~/js/forgot-password.js"></script>
}

<div class="hero_area">
    <section class="slider_section">
        <div class="container d-flex justify-content-center" style="min-height: 90vh; padding-top: 5vh;">
            <section class="forgot_password_section w-100" style="max-width: 600px;">
                <div class="card p-5 shadow-lg" style="min-height: 350px; position: relative;">
                    <h2 class="text-center mb-4">Forgot Your Password?</h2>
                    <form id="forgotPasswordForm" method="post" action="/api/accounts/forgot-password">
                        <div class="form-group mb-4">
                            <label for="email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                </div>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-lg">Send Reset Link</button>
                    </form>

                    <div id="loginRedirect" class="text-center mt-4">
                        <p>Remembered your password? <a href="~/login">Login here</a></p>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
