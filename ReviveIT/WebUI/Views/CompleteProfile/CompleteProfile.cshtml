@{
    ViewData["Title"] = "Complete Your Profile";
}

@section Styles {
    <link href="~/css/ProfileComplete.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/profileComplete.js"></script>
}

@if (User.Identity.IsAuthenticated)
{
    <div id="profileCompleteArea" class="hero_area">
        <section id="profileSection" class="slider_section">
            <div id="profileContainer" class="container d-flex justify-content-center pb-5">
                <section id="profileFormSection" class="profile_form_section">
                    <div id="formContainer" class="container">
                        <div id="rowContainer" class="row">
                            <div id="formColumn" class="col-lg-12 mx-auto">
                                <div id="formCard" class="card p-4 shadow-lg">
                                    <h3 id="formTitle" class="text-center mb-4">Complete Your Profile</h3>

                                    <form id="profileForm">
                                        <div id="leftright">
                                            <div id="left">
                                                <div id="phoneField" class="form-group">
                                                    <label for="phone" class="form-label">Phone Number:</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                                        </div>
                                                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required>
                                                    </div>
                                                </div>

                                                <div id="descriptionField" class="form-group">
                                                    <label for="description" class="form-label">Write a description about yourself:</label>
                                                    <textarea class="form-control" id="description" name="description" rows="4" placeholder="Tell us about yourself" required></textarea>
                                                </div>
                                            </div>
                                            <div id="right">
                                                <div id="cityField" class="form-group">
                                                    <label for="city" class="form-label">Choose the cities you operate in:</label>
                                                    <div>
                                                        <select class="form-control" id="city" name="city" multiple required>
                                                        </select>
                                                    </div>
                                                </div>
                                                @if (User.IsInRole("Company"))
                                                {
                                                    <div id="categoryField" class="form-group">
                                                        <label for="category" class="form-label">Choose the categories your company operates in:</label>
                                                        <div>
                                                            <select class="form-control" id="category" name="category" multiple required>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div id="experienceField" class="form-group">
                                                        <label for="experience" class="form-label">Specify your company's experience in the industry:</label>
                                                        <div>
                                                            <input type="number" class="form-control" id="experience" name="experience" min="1" max="100" placeholder="Enter years of industry experience" required>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <button id="submitBtn" type="submit" class="btn btn-primary btn-block">Save Profile</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>
}