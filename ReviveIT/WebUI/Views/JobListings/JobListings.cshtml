<section class="job_section layout_padding">
    <div class="container">
        <!-- Add Job Button -->
        <div class="add-job-container text-center my-4">
            <button class="btn btn-lg" style="background-color: #e41a2b; color: white;" onclick="openModal()">Add Job</button>
        </div>

        <!-- Job Modal -->
        <div id="jobModal" class="modal fade" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">  
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Job Information</h5>
                    </div>
                    <div class="modal-body">
                        <form id="jobForm" onsubmit="submitJobForm(event)">
                            <div class="mb-3">
                                <label for="jobTitle" class="form-label">Job Title</label>
                                <input type="text" class="form-control" id="jobTitle" name="jobTitle" placeholder="Enter job title" required>
                            </div>
                            <div class="mb-3">
                                <label for="jobDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="jobDescription" name="jobDescription" placeholder="Enter job description" rows="4" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="jobCategory" class="form-label" style="line-height: 10px;">Category</label>
                                <select class="form-control" id="jobCategory" name="jobCategory" required>
                                    <option value="" selected disabled>Select Category</option>
                                    <option value="1">Electronics Repair</option>
                                    <option value="2">Furniture Restoration</option>
                                    <option value="3">Home Appliance Repair</option>
                                    <option value="4">Automotive Repair</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="jobPrice" class="form-label">Price</label>
                                <input type="number" class="form-control" id="jobPrice" name="jobPrice" placeholder="Enter Price range" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Add Job</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

