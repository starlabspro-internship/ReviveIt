@model IEnumerable<Application.DTO.TechnicianViewModel>

@{
    ViewData["Title"] = "Pros";
}

@section Styles{
    <link rel="stylesheet" href="~/css/pros.css">
}

@section Scripts{
    <script src="~/js/pros.js" defer></script>
}

<section class="expert_section layout_padding technician-page">
    <div class="container">
        <div class="heading_container heading_center" style="margin-bottom:20px">
            <h2>
                LOOKING FOR EXPERTS?
            </h2>
            <p>
                Find skilled professionals to fulfill your needs.
            </p>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="filter-section">
                <form id="filtersForm">
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <input type="text" class="form-control" id="keywords" placeholder="Enter keywords">
                        </div>
                        <div class="form-group col-lg-4">
                            <select name="SelectedCityId" id="filterCities" class="form-control wide">
                                <option value="">All Locations</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-4">
                            <select name="SelectedCategoryId" id="filterCategories" class="form-control wide">
                                <option value="">All Categories</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <input type="number" class="form-control" id="experience" placeholder="Minimum Experience">
                        </div>
                        <div class="form-group col-lg-4">
                            <select name="SelectRole" id="selectRole" class="form-control wide">
                                <option value="">All Profiles</option>
                                <option value="technician">Technician</option>
                                <option value="company">Company</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-4">
                            <select name="SortBy" id="sortBy" class="form-control wide">
                                <option value="">Sort By</option>
                                <option value="highestRating">Highest Rating</option>
                                <option value="dateAsc">Date: Oldest First</option>
                                <option value="dateDesc">Date: Newest First</option>
                                <option value="nameAsc">Name: A to Z</option>
                                <option value="nameDesc">Name: Z to A</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row mb-4">
                        <div class="form-group col-lg-6">
                            <button type="button" class="btn btn-primary w-100" id="applyFiltersButton">Apply Filters</button>
                        </div>
                        <div class="form-group col-lg-6">
                            <button type="button" class="btn btn-secondary w-100" id="resetFiltersButton">Reset Filters</button>
                        </div>
                    </div>
                </form>
            </div>
        }
        <div id="technicianContainer" class="row">
        </div>
        @if (User.Identity.IsAuthenticated){
        <div class="btn-box">
            <a href="#" id="viewMoreButton">
               Load More Experts
            </a>
        </div>
        } else{
         <div class="btn-box">
            <a href="/LogIn?returnUrl=/Pros">
                Log in to See More Experts
            </a>
        </div>
        }
    </div>
</section>

<section class="info_section">
    <div class="container">
        <div class="row">
            <div class="col-md-2 info_links">
                <h4>
                    Menu
                </h4>
                <ul>
                    <li>
                        <a href="Home">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="AboutUs">
                            About
                        </a>
                    </li>
                    <li>
                        <a href="JobListings">
                            Job Listings
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-3">
                <h4>
                    Jobs
                </h4>
                <p>
                    Established fact that a reader will be distracted by the readable content of a page when looking at its
                    layout. The point of using Lorem Ipsum
                </p>
            </div>
            <div class="col-md-3">
                <div class="info_social">
                    <h4>
                        Social Link
                    </h4>
                    <div class="social_container">
                        <div>
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info_form">
                    <h4>
                        Newsletter
                    </h4>
                    <form action="">
                        <input type="text" placeholder="Enter Your Email" />
                        <button type="submit">
                            Subscribe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

