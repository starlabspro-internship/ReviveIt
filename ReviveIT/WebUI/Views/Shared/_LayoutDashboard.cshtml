@{
    var role = ViewBag.Role as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Revivelt </title>
    <link rel="stylesheet" href="~/css/sitedashboard.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Round" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body>
    <header class="header">
        <div class="header-container">
            <h1 class="site-title">Revivelt </h1>
            <nav class="main-navbar">
                <div class="navbar-container">
                    <ul class="navbar-list">
                        @if (role == "Company")
                        {
                            <li class="nav-item">
                                <a asp-controller="Company" asp-action="Inbox" class="navbar-link auth-link">
                                    <span class="material-icons-round">inbox</span>Inbox
                                </a>
                            </li>
                        }
                        else if (role == "Technician")
                        {
                            <li class="nav-item">
                                <a asp-controller="Technician" asp-action="PostedJobs" class="navbar-link auth-link">
                                    <span class="material-icons-round">search</span>Posted Jobs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Technician" asp-action="Inbox" class="navbar-link auth-link">
                                    <span class="material-icons-round">inbox</span>Inbox
                                </a>
                            </li>
                        }
                        else if (role == "Customer")
                        {
                            <li class="nav-item">
                                <a asp-controller="Customer" asp-action="TechniciansCompanies" class="navbar-link auth-link">
                                    <span class="material-icons-round">search</span>Technicians/Companies
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Customer" asp-action="PostJob" class="navbar-link auth-link">
                                    <span class="material-icons-round">post_add</span>Post a job
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Customer" asp-action="Inbox" class="navbar-link auth-link">
                                    <span class="material-icons-round">inbox</span>Inbox
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="user-action-list">
                        <li class="nav-item">
                            <a asp-controller="Logout" asp-action="Logout" class="navbar-link auth-link">
                                <span class="material-icons-round">logout</span>Log out
                            </a>
                        </li>
                        @if (role == "Company")
                        {
                            <li class="nav-item">
                                <a asp-controller="Company" asp-action="Myaccount" class="navbar-link auth-link">
                                    <span class="material-icons-round">account_circle</span>My account
                                </a>
                            </li>
                        }
                        else if (role == "Technician")
                        {
                            <li class="nav-item">
                                <a asp-controller="Technician" asp-action="Myaccount" class="navbar-link auth-link">
                                    <span class="material-icons-round">account_circle</span>My account
                                </a>
                            </li>
                        }
                        else if (role == "Customer")
                        {
                            <li class="nav-item">
                                <a asp-controller="Customer" asp-action="Myaccount" class="navbar-link auth-link">
                                    <span class="material-icons-round">account_circle</span>My account
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- Content -->
    <main id="content-placeholder">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js"></script>
    <!--  JWT decoding -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsrsasign/10.1.13/js/jsrsasign-all-min.js"></script>
</body>
</html>
